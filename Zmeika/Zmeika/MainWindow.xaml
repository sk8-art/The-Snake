<Window x:Class="Zmeika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zmeika"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="Black" Focusable="True"/>
		<TextBlock x:Name="ScoreTextBlock" Text="Score: 0" Foreground="White" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
        <Button x:Name="RestartButton" Content="Restart" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Click="RestartButton_Click"/>
        <Button x:Name="StartGame" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Click="StartGame_Click"/>
    </Grid>
</Window>
